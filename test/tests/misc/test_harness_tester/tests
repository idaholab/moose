[Tests]
  [./test_compiler_check]
    type = 'Exodiff'
    input = '2d_diffusion_test2.i'
    exodiff = 'out2.e'
    compiler = 'GCC CLANG'
  [../]

  [./test_petsc_check]
    type = 'Exodiff'
    input = '2d_diffusion_test2.i'
    exodiff = 'out2.e'
    petsc_version = '>=3.1'
    prereq = 'test_compiler_check test_platform_check'
  [../]

  [./test_method_check]
    type = 'Exodiff'
    input = '2d_diffusion_test2.i'
    exodiff = 'out2.e'
    method = 'OPT OPROF'
    prereq = 'test_petsc_check'
  [../]

  [./test_library_check]
    type = 'Exodiff'
    input = '2d_diffusion_test2.i'
    exodiff = 'out2.e'
    prereq = 'test_method_check'
  [../]

  [./test_platform_check]
    type = 'Exodiff'
    input = '2d_diffusion_test.i'
    exodiff = 'out.e'
    platform = 'DARWIN'
    prereq = 'test_compiler_check'
  [../]

  [./test_combined]
    type = 'Exodiff'
    input = '2d_diffusion_test.i'
    exodiff = 'out.e'
    platform = 'DARWIN'
    compiler = 'GCC CLANG'
    prereq = 'test_platform_check'
  [../]

  [./test_threads_test]
    type = 'Exodiff'
    input = '2d_diffusion_test.i'
    exodiff = 'out.e'
    prereq = 'test_method_check test_combined'
    min_threads = 2
  [../]

  [./test_post_cmd_test]
    type = 'RunApp'
    input = '2d_diffusion_test.i'
    post_command = 'echo string_to_test_post_command'
    expect_out = 'string_to_test_post_command'
  [../]

