  [errors]
     requirement = "The system shall throw an error if"
     [nums_edges_mismatch]
       type = 'RunException'
       input = 'polyline_mesh_generator_multi_refine.i'
       cli_args = '--mesh-only err.e
                  Mesh/poly/nums_edges_between_points="2 3 4"'
