[Tests]
  design = 'meshgenerators/SmoothMeshGenerator.md'
  [algorithms]
    requirement = 'The system shall be able to smooth a mesh using a:'
    issues = '#11640 #28424 #22141'
    [laplace_smooth_mesh_generator]
      type = 'Exodiff'
      input = 'laplace_mesh_smoother_generator.i'
      cli_args = '--mesh-only'
      exodiff = 'laplace_mesh_smoother_generator_in.e'
      mesh_mode = 'REPLICATED'
      recover = false
      detail = 'Laplace smoothing algorithm'
    []

    [variational_smooth_mesh_generator]
      type = 'Exodiff'
      input = 'variational_mesh_smoother_generator.i'
      cli_args = '--mesh-only'
      exodiff = 'variational_mesh_smoother_generator_in.e'
      recover = false
      detail = 'variational smoothing algorithm'
    []
  []

  [warnings]
    requirement = 'The system shall emit an error if'
    issues = '#28424'
    [unused_variational_params]
       type = RunException
       input = 'laplace_mesh_smoother_generator.i'
       cli_args = 'Mesh/smooth/preserve_subdomain_boundaries=false --mesh-only'
       mesh_mode = 'REPLICATED'
       recover = false
       detail = 'variational smoothing parameters are passed for the Laplace smoothing algorithm.'
       expect_err = "SmoothMeshGenerator param 'preserve_subdomain_boundaries' applies to algorithm='variational' only and has no effect on the currently selected algorithm='laplace'."
    []

    [unused_laplace_params]
       type = RunException
       input = 'variational_mesh_smoother_generator.i'
       cli_args = 'Mesh/smooth/iterations=10 --mesh-only'
       recover = false
       detail = 'Laplace smoothing parameters are passed for the variational smoothing algorithm.'
       expect_err = "SmoothMeshGenerator param 'iterations' applies to algorithm='laplace' only and has no effect on the currently selected algorithm='variational'."
    []
  []
[]
