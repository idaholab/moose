    issues = "#12066"
    design = "InterfaceKernels/index.md"
    requirement = "The InterfaceKernel system shall use with interface material in 2D."
  [../]

  [./jacobian_test]
    type = AnalyzeJacobian
    input = coupled_value_coupled_flux.i
    expect_out = '\nNo errors detected. :-\)\n'
