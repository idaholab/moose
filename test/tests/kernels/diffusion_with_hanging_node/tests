    allow_warnings = True
    requirement = 'The colored finite difference Jacobian for a problem with a hanging-node shall be non-singular'
  [../]
  [./test_fd_standard]
    type = 'Exodiff'
    input = 'simple_diffusion.i'
    exodiff = 'simple_diffusion_out.e'
