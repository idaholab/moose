  # Generate an XDA file every time
  # If parallel XDA is ever implemented, this will make sure the partitioning the same
  [generate_solution_file]
    type = RunApp
    input = 'create_solution_file.i'
    cli_args = 'Outputs/file_base=build_out'
    requirement = 'The system shall be able to create a solution file to test a function that gets values from a solution file.'
  []
  [test]
    type = 'Exodiff'
    input = 'solution_function_test.i'
    exodiff = 'out.e'
    requirement = "The SolutionFunction object shall be capable of evaluating a solution read from XDA mesh and solution files."
    prereq = 'generate_solution_file'
  []

