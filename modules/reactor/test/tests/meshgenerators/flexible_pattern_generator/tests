    [patterned_assm]
      type = CSVDiff
      input = patterned_assm.i
      csvdiff = patterned_assm.csv
      recover = false
      mesh_mode = 'REPLICATED'
      detail = "a patterned assembly mesh by stitching flexible patterned meshes."
    []
    [double_ext_boundary]
      type = Exodiff
      input = double_ext_boundary.i
      cli_args = "--mesh-only"
      exodiff = double_ext_boundary_in.e
      exodiff_opts = '-pedantic'
      recover = false
      detail = "a hexagonal mesh with the input mesh's default external boundary being deleted."
    []
