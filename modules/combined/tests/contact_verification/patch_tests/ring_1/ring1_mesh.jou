title 'Contact Patch Test - Simplified, constrained'

# Setup dimensions of problem
#{width=1.0}
#{height=0.5}
#{nelem_w=1}
#{nelem_h=1}

# Lower block
create vertex 1. 0
create vertex {1.+width} 0
create vertex {1.+width} {height}
create vertex 1. {height}
create vertex {1.+width} {2.0*height}
create vertex 1. {2.0*height}

create surface vertex 1 2 3 4
create surface vertex 4 3 5 6

block 1 surf 1
block 2 surf 2

block 1 elem quad4
block 2 elem quad4

# Specify meshing
curve 1 3 5 7 interval {nelem_w}
curve 2 4 6 8 interval {nelem_h}

mesh surf all

sideset 1 curve 1
sideset 2 curve 4 8
sideset 3 curve 3
sideset 4 curve 5
sideset 5 curve 7

export mesh 'ring1_mesh.e' overwrite
